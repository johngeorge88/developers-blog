<div class="card signup-form">
    <div class="card-header">
        Sign-up
    </div>
    <div class="card-body">
        <form>
            <div class="form-group">
                <label for="username-signup">User-name</label>
                <input type="text" class="form-control" id="username-signup">
            </div>
            <div class="form-group">
                <label for="email-signup">Email address</label>
                <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
            </div>
            <div class="form-group">
                <label for="password-signup">Password</label>
                <input type="password" class="form-control" id="password-signup">
            </div>
            <button type="submit" class="btn btn-primary">Signup</button>
        </form>
    </div>
</div>

<script src="/javascript/signup.js"></script>