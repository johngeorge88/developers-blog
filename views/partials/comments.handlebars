<div class="comments">
  {{#each this}}
  <div class="card text-white bg-secondary mb-3 m-3 " style="max-width: 18rem;">
    <section class="comment">
      <div class=" meta card-header">
        {{user.username}} on {{format_date created_at}}
      </div>
      <div class="card-body">
        <p class="text card-text">
          {{comment_text}}
        </p>
      </div>
    </section>
  </div>
  {{/each}}
</div>




