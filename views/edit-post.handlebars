<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <div class="card">
    <div class="card-header">
      Edit Post
    </div>
    <div class="card-body">
      <form class="edit-post-form">
        <div class="form-group">
          <label>Post title:</label>
          <input name="post-title" type="text" value="{{post.title}}" class="form-control">
        </div>
        <div class="form-group">
          <label>Post text:</label>
          <input name="post-title" type="text" value="{{post.post_text}}" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Save post</button>
        <button type="button" class="delete-post-btn btn btn-primary">Delete post</button>
      </form>
    </div>
</article>

